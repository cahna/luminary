include_rules

root_dir = $(TUP_CWD)/../../
static_dir = $(root_dir)/console/static

!pack = |> ^ pack %b > %o^ (echo 'return [==['; cat %f; echo ']==]' ) > %o |>

# pack javascript
: foreach $(static_dir)/js/*.js         |> !pack |> %B_js.lua

# pack css
: foreach $(static_dir)/style/*.css     |> !pack |> %B_css.lua
